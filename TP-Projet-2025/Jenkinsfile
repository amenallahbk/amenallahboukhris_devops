pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'      // Nom du JDK configur√© dans Jenkins
        maven 'M2_HOME'      // Nom de Maven configur√© dans Jenkins
    }

    environment {
        SONAR_TOKEN = credentials('sonar-token') // token SonarQube
    }

    stages {

        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/amenallahbk/amenallahboukhris_devops.git',
                        credentialsId: 'git-credentials'
                    ]]
                ])
            }
        }

        stage('Clean') {
            steps {
                dir('TP-Projet-2025') {
                    sh 'mvn clean'
                }
            }
        }

        stage('Compile') {
            steps {
                dir('TP-Projet-2025') {
                    sh 'mvn compile'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('TP-Projet-2025') {
                    withSonarQubeEnv('sonarqube') {
                        sh """
                        mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar \
                          -Dsonar.projectKey=amenallahboukhris_devops \
                          -Dsonar.host.url=http://192.168.33.10:9000 \
                          -Dsonar.login=${SONAR_TOKEN}
                        """
                    }
                }
            }
        }

        stage('Package') {
            steps {
                dir('TP-Projet-2025') {
                    sh 'mvn package -DskipTests'
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                dir('TP-Projet-2025') {
                    withCredentials([string(credentialsId: 'DOCKERHUB_TOKEN', variable: 'DOCKERHUB_TOKEN')]) {
                        sh '''
                        docker build -t amounboukhris/tpfoyer:1.0 .
                        echo $DOCKERHUB_TOKEN | docker login -u amounboukhris --password-stdin
                        docker push amounboukhris/tpfoyer:1.0
                        '''
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f TP-Projet-2025/k8s/'
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'TP-Projet-2025/target/*.jar'

            emailext (
                subject: "‚úÖ SUCCESS : Pipeline Jenkins - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                    <h2>Pipeline ex√©cut√© avec succ√®s üéâ</h2>
                    <p><b>Projet :</b> ${env.JOB_NAME}</p>
                    <p><b>Build :</b> #${env.BUILD_NUMBER}</p>
                    <p><b>Status :</b> SUCCESS ‚úÖ</p>
                    <p><b>URL :</b> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                """,
                to: "amenallah.boukhris@gmail.com",
                mimeType: 'text/html'
            )
        }

        failure {
            emailext (
                subject: "‚ùå FAILURE : Pipeline Jenkins - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                    <h2>Pipeline √©chou√© ‚ùå</h2>
                    <p><b>Projet :</b> ${env.JOB_NAME}</p>
                    <p><b>Build :</b> #${env.BUILD_NUMBER}</p>
                    <p><b>Status :</b> FAILURE ‚ùå</p>
                    <p><b>Logs :</b> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                """,
                to: "amenallah.boukhris@gmail.com",
                mimeType: 'text/html'
            )
        }
    }
}
